extends ../layout

block content
    .page-header
        h3 Create Sport
        ul
            li= sport.name
            a(href="/getUpdate/"+sport.name) edit







            form.form-horizontal(id='signup-form', method='POST' action='/deleteSport')
                input(type='hidden', name='_csrf', value=_csrf)
                input(type='hidden', name='name', value=sport.name)
                .form-group
                    .col-sm-offset-3.col-sm-7
                        button.btn.btn-success(type='submit')
                            i.fa.fa-user-plus
                            | delete sport

